<UserControl x:Class="Cobalt.Controls.ChatBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cobalt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="Box">
    <Grid>
        <ScrollViewer  x:Name="ScrollViewer" CanContentScroll="True" >
            <local:ChatPresenter Background="Transparent" VerticalAlignment="Top" 
                                 SnapsToDevicePixels="True"
                                 MessagesSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChatBox}}, Path=MessagesSource, Mode=TwoWay}" 
                                 MinHeight="{Binding ActualHeight, ElementName=ScrollViewer, Mode=OneWay}" />
        </ScrollViewer>
    </Grid>
</UserControl>
