<UserControl x:Class="Cobalt.Controls.ChatBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cobalt.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="Box">
    <Grid>
            <local:ChatPresenter SnapsToDevicePixels="True" MessagesSource="{Binding ElementName=Box, Path=MessagesSource}"/>
    </Grid>
</UserControl>
